{% if pages.breadcrumb(page) %}
    <nav id="main-breadcrumb" class="breadcrumb" aria-label="Breadcrumb">

        {% for bc in pages.breadcrumb(page) %}
            <span class="breadcrumb-item">{{bc|link}}</span>
        {% endfor %}
        <span class="breadcrumb-item">{{page|link}}</span>

    </nav>
{% endif %}
